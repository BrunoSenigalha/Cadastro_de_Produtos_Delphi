unit uPesquisaProdutos;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Data.DB, Vcl.Grids, Vcl.DBGrids,
  Vcl.ComCtrls, Vcl.ExtCtrls, uConexoes, Vcl.StdCtrls, Vcl.DBCtrls, Vcl.Buttons;

type
  TfrmPesquisaProdutos = class(TForm)
    DBGrid1: TDBGrid;
    Panel1: TPanel;
    btnConsultar: TButton;
    Panel2: TPanel;
    RadioGroup1: TRadioGroup;
    procedure btnConsultarClick(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  frmPesquisaProdutos: TfrmPesquisaProdutos;

implementation

uses
  uCadastroProdutosReformulado;

{$R *.dfm}

procedure TfrmPesquisaProdutos.btnConsultarClick(Sender: TObject);
begin
  with dmConexoes do
  begin
    qrConsultaProdutos.Close;
    qrConsultaProdutos.SQL.Clear;
    qrConsultaProdutos.SQL.ADD('SELECT * FROM PRODUTOS');

    case RadioGroup1.ItemIndex of
      1: qrConsultaProdutos.SQL.Append('WHERE ProdInativo = 0');
      2: qrConsultaProdutos.SQL.Append('WHERE ProdInativo = 1')
    end;
    qrConsultaProdutos.Open;
  end;
end;

end.
